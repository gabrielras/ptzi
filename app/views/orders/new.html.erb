<div class="container column is-6">
    <%= form_with url: '/orders', method: :post do |f| %>
    <div class="field">
      <div class="control">
        <label>Imei</label>
        <%= f.number_field :imei, :required => true, type: 'number', class: 'input', name: 'order[imei]', id: 'order[imei]' %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label>Preço Anual</label>
        <%= f.number_field :annual_price, :required => true, type: 'number', class: 'input', name: 'order[annual_price]', id: 'order[annual_price]' %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <label>Número de Parcelas</label>
        <%= f.number_field :installments, :required => true, type: 'number', class: 'input', name: 'order[installments]', id: 'order[installments]' %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label>Modelo do Dispositivo</label>
        <%= f.text_field :device_model, :required => true, type: 'text', class: 'input', name: 'order[device_model]', id: 'order[device_model]' %>
      </div>
    </div>
    
    <div class="find-user">
      <div class="field">
        <div class="control">
          <label>Selecione um Usuário</label>
          <div class="control has-icons-left">
            <span class="select">
              <%=  f.collection_select(:user_id, User.all.collect { |u| [ u.id, "#{u.name} - #{u.cpf}" ] },
                :first, :second, { :prompt => 'Selecione um Usuário', name: 'order[user_id]', id: 'order[user_id]'}) %>
            </span>
            <span class="icon is-small is-left">
              <i class="fa fa-tag"></i>
            </span>
          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="create-user">
      <label>Crie um Usuário</label><br>
      <div class="field">
        <div class="control">
          <label>Nome</label>
          <%= f.text_field :name, type: 'text', class: 'input', name: 'order[user][name]', id: 'order[user][name]' %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <label>CPF</label>
          <%= f.text_field :cpf, type:'text', class: 'input', name: 'order[user][cpf]', id: 'order[user][cpf]' %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <label>E-mail</label>
          <%= f.email_field :email, type: 'email', class: 'input', name: 'order[user][email]', id: 'order[user][email]' %>
        </div>
      </div>
    </div>
    <br>
    <div class="field">
      <div class="control">
        <%=  f.submit "Salvar", class: 'button is-primary is-fullwidth is-uppercase' %>
      </div>
    </div>
  <% end %>
</div>
