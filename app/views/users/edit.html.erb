<div class="container column is-6">
  <%= form_with url: "/users/#{@user_id}", method: :patch do |f| %>
    <div class="field">
      <div class="control">
        <label>Nome</label>
        <%= f.text_field :name, type: 'text', class: 'input', name: 'user[name]', id: 'user[name]' %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label>CPF</label>
        <%= f.text_field :cpf, type:'text', class: 'input', name: 'user[cpf]', id: 'user[cpf]' %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <label>E-mail</label>
        <%= f.email_field :email, type: 'email', class: 'input', name: 'user[email]', id: 'user[email]' %>
      </div>
    </div>

    <br>
    <div class="field">
      <div class="control">
        <%=  f.submit "Salvar", class: 'button is-primary is-fullwidth is-uppercase' %>
      </div>
    </div>
  <% end %>
</div>
